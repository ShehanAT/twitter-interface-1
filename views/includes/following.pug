.grid-33
  .app--section
    ul.app--user--list
      each item in followers
        li
          .circle--fluid
            .circle--fluid--cell.circle--fluid--primary
              a.app--tweet--author
                .app--avatar(style='background-image: url("' + item.profile_image_url + '")')
                  img(src=item.profile_image_url) 
                h4 #{item.name}
                p @#{item.screen_name}
            .circle--fluid--cell
              a.button.button-text Unfollow
